<h1>Listing users</h1>
<div class="text-center">
<div class="table-responsive">
  <table class="table">
  <thead>
    <tr>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  
  <tbody>
    <% @users.each do |user| %>
      <tr>
        <td><%= user.name %></td>
        <td><%= image_tag user.avatar.url(:small) ,:class=>"img-responsive img-thumbnail"%></td>
        <td><%= link_to 'Show', user ,:class=>"btn btn-info"%></td>
        <td><%= link_to 'Edit', edit_user_path(user) ,:class=>"btn btn-success"%></td>
        <td><%= link_to 'Destroy', user, method: :delete, data: { confirm: 'Are you sure?' } ,:class=>"btn btn-danger"%></td>
      </tr>
    <% end %>
  </tbody>
</table>
</div>
<br>

<%= link_to 'Create New User', new_user_path ,:class=>"btn btn-success"%>

</div>
<style type="text/css">
.table {
  margin-bottom:20px;
  width:30%;
}
</style>